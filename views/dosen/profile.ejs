<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="/profileDosen.css">
</head>
<body>
    <div class="sidebar">
        <div class="contcircle">
            <div class="circle">
                <img src="/Gambar/profile.png" alt="">
            </div>
        </div>
        <div class="keterangan">
            <a href="/dosen/profile">
                <div class="nama"><%= user.nama %></div>
                <div class="nim"><%= user.nim_nip %></div>
            </a>
        </div>
        <div class="isi">
            <a href="/dosen/dashboard"><h4 class="dashboard">Dashboard</h4></a><br>
            <a href="/dosen/nilai"><h4>Nilai</h4></a><br>
            <form id="logoutForm" action="/logout" method="POST">
                <button type="submit" onclick="logout()" style="background:none; border:none; cursor:pointer;"><h4>Logout</h4></button>
            </form>
            <div class="titik"></div>
        </div>
    </div>
    <div class="container">
        <div class="container2">
        <div class="profile-card bg-white">
            <div class="profile-header">Profile</div>
            <div class="profile-field">
                <label>Name:</label>
                <span><%= user.nama %></span>
            </div>
            <div class="profile-field">
                <label>Email:</label>
                <span><%= user.email %></span>
            </div>
            <div class="profile-field">
                <label>NIP:</label>
                <span><%= user.nim_nip %></span>
            </div>
            <div class="profile-field">
                <label>Fakultas:</label>
                <span><%= user.fakultas %></span>
            </div>
            <div class="profile-field">
                <label>Jurusan:</label>
                <span><%= user.jurusan %></span>
            </div>
            <a href="/dosen/profile/changePass">
                <button class="ubah"> Ubah Password</button>
            </a>
        </div>
    </div>

    <script>
        function logout() {
            fetch('/logout', {
                method: 'DELETE'
            })
            .then(response => {
                if (response.ok) {
                    window.location.href = '/login'; // Redirect to login page after successful logout
                } else {
                    throw new Error('Failed to logout');
                }
            })
            .catch(error => {
                console.error('Logout failed:', error);
            });
        }
    </script>
</body>
</html>