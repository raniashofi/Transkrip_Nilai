<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="/nilai.css">
</head>
<body>
    <div class="sidebar">
        <div class="contcircle">
            <div class="circle"></div>
        </div>
        <div class="keterangan">
            <a href="/dosen/profile">
                <div class="nama"><%= user.nama %></div>
                <div class="nim"><%= user.nim_nip %></div>
            </a>
        </div>
        <div class="isi">
            <a href="/dosen/dashboard"><h4 class="dashboard">Dashboard</h4></a><br>
            <a href="/dosen/nilai"><h4 class="nilai">Nilai</h4></a><br>
            <form id="logoutForm" action="/logout" method="POST">
                <button type="submit" onclick="logout()" style="background:none; border:none; cursor:pointer;"><h4>Logout</h4></button>
            </form>
            <div class="titik"></div>
        </div>
    </div>
    <div class="container">
        <div class="container2">
            <h2>Input Nilai Mahasiswa</h2>
            <!-- Form untuk Memilih Mata Kuliah dan Tahun Ajaran -->
            <div class="search-container">
                <input type="text" placeholder="Cari..." id="search">
            </div>

            <form action="#">
                <select name="" id="tahunajaran">
                    <option value="">-- Select tahun ajaran --</option>
                </select>
                <select name="" id="matakuliah">
                    <option value="">-- Select matakuliah --</option>
                </select>
                <select name="" id="kodematakuliah">
                    <option value="">-- Select kode matakuliah --</option>
                </select>
            </form>
                
            <!-- Tabel untuk Menampilkan Daftar Mahasiswa -->
            <table>
                <thead>
                    <tr>
                        <th class="kiri">NIM</th>
                        <th class="tengah">Nama</th>
                        <th class="kanan">Nilai Huruf</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>123456</td>
                        <td>John Doe</td>
                        <td><select name="" id="nilai">
                            <option value="">-- Select nilai --</option>
                        </select></td>
                    </tr>
                    <tr>
                        <td>654321</td>
                        <td>Jane Smith</td>
                        <td><select name="" id="nilai">
                            <option value="">-- Select nilai --</option>
                        </select></td>
                    </tr>
                    <tr>
                        <td>789012</td>
                        <td>James Bond</td>
                        <td><select name="" id="nilai">
                            <option value="">-- Select nilai --</option>
                        </select></td>
                    </tr>
                </tbody>
            </table>
    </div>
</div>

<!-- JavaScript untuk Fungsi Logout dan Dropdown -->
<script>
    function logout() {
        fetch('/logout', {
            method: 'DELETE'
        })
        .then(response => {
            if (response.ok) {
                window.location.href = '/login'; // Redirect to login page after successful logout
            } else {
                throw new Error('Failed to logout');
            }
        })
        .catch(error => {
            console.error('Logout failed:', error);
        });
    }

</script>
</body>
</html>