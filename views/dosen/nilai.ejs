<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="/nilai.css">
</head>
<body>
    <div class="sidebar">
        <div class="contcircle">
            <div class="circle"></div>
        </div>
        <div class="keterangan">
            <a href="/dosen/profile">
                <div class="nama"><%= user.nama %></div>
                <div class="nim"><%= user.nim_nip %></div>
            </a>
        </div>
        <div class="isi">
            <a href="/dosen/dashboard"><h4 class="dashboard">Dashboard</h4></a><br>
            <a href="/dosen/nilai"><h4 class="nilai">Nilai</h4></a><br>
            <form id="logoutForm" action="/logout" method="POST">
                <button type="submit" onclick="logout()" style="background:none; border:none; cursor:pointer;"><h4>Logout</h4></button>
            </form>
            <div class="titik"></div>
        </div>
    </div>
    <div class="container">
        <div class="container2">
            <h2>Input Nilai Mahasiswa</h2>
            <!-- Form untuk Memilih Mata Kuliah dan Tahun Ajaran -->
            <div class="search-container">
                <input type="text" placeholder="Cari..." id="search">
            </div>

            <form action="/dosen/nilai" method="GET" id="form">
                <select name="tahunAjaran">
                    <% listTahunAjaran.forEach(function(tahunAjaran) { %>
                    <option
                        value="<%= tahunAjaran.tahun_ajaran %>"
                        <%= tahunAjaran.tahun_ajaran === selectedTahunAjaran ? 'selected' : '' %>>
                        <%= tahunAjaran.tahun_ajaran %>
                    </option>
                    <% }) %>
                </select>
                <br />
                <h1>Pilih mata kuliah</h1>
                <select name="mataKuliah">
                    <% listMataKuliah.forEach(function(mataKuliah) { %>
                    <option
                        value="<%= mataKuliah.kode_matkul %>"
                        <%= mataKuliah.kode_matkul === selectedMataKuliah ? 'selected' : '' %>>
                        <%= mataKuliah.nama_matkul %>
                    </option>
                    <% }) %>
                </select>
                <br />
    
                <script>
                    const form = document.getElementById('form');
                    form.addEventListener('change', function() {
                        form.submit();
                    });
                </script>
            </form>
    
            <h1>Data Mahasiswa</h1>
            <table>
                <thead>
                    <tr>
                        <th>NIP</th>
                        <th>Nama Mahasiswa</th>
                        <th>Fakultas</th>
                        <th>Jurusan</th>
                        <th>Jumlah SKS</th>
                        <th>Nilai Mutu</th>
                        <th>Nilai Huruf</th>
                    </tr>
                </thead>
                <tbody>
                    <% listTranskip?.forEach(function(transkrip) { %>
                    <tr>
                        <td><%= transkrip.nim_nip %></td>
                        <td><%= transkrip.User.nama %></td>
                        <td><%= transkrip.User.fakultas %></td>
                        <td><%= transkrip.User.jurusan %></td>
                        <td><%= transkrip.MataKuliah.sks %></td>
                        <td><%= transkrip.nilai_mutu %></td>
                        <td>
                            <form action="/dosen/nilai/<%= transkrip.nim_nip %>" method="POST">
                                <input type="hidden" name="kode_matkul" value="<%= transkrip.kode_matkul %>" />
                                <input type="hidden" name="tahun_ajaran" value="<%= transkrip.tahun_ajaran %>" />
                                
                                <label for="nilai_huruf">
                                    <span>Nilai Huruf</span>
                                    <select name="nilai_huruf">
                                        <% ['A', 'A-', 'B+', 'B', 'B-', 'C+', 'C', 'D', 'E'].forEach(function(nilai_huruf) { %>
                                            <option value="<%= nilai_huruf %>" <%= transkrip.nilai_huruf === nilai_huruf ? 'selected' : '' %>>
                                                <%= nilai_huruf %>
                                            </option>
                                        <% }) %>
                                    </select>
                                </label>
                                <input type="submit" value="Update" />
                            </form>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
    </div>
</div>

<!-- JavaScript untuk Fungsi Logout dan Dropdown -->
<script>
    function logout() {
        fetch('/logout', {
            method: 'DELETE'
        })
        .then(response => {
            if (response.ok) {
                window.location.href = '/login'; // Redirect to login page after successful logout
            } else {
                throw new Error('Failed to logout');
            }
        })
        .catch(error => {
            console.error('Logout failed:', error);
        });
    }

</script>
</body>
</html>